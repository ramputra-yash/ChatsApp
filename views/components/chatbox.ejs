    <input
      type="text"
      id="messageInput"
      placeholder="Type a message..."
      class="w-full outline-none"
    />
    <button
      type="button"
      onclick="sendMessage()"
      class="w-[40px] h-[40px] cursor-pointer bg-blue-600"
