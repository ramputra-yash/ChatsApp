<style>
    #localVideo {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 1;
        bottom: 0;
        right: 0;
        box-shadow: 0 0 20px rgba(0,0,0,.2);
        border-radius: 10px;
        transition: .5s;
    }
    #localVideo.small {
        position: absolute;
        width: 100px;
        object-fit: cover;
        height: 150px;
        bottom: 110px;
        right: 10px;
        z-index: 10;
        box-shadow: 0 0 20px rgba(0,0,0,4);
    }
</style>
<div id="videomodel" class="w-full absolute z-50 bg-zinc-900/90 bottom-0" style="height: 100%;backdrop-filter: blur(20px);display: none;">
    <div class="w-full absolute h-[60px] flex gap-3 z-2 items-center" style="padding: 0 15px;">
        <img class="w-[40px] h-[40px] shadow-lg rounded-full" src="<%= receiverUser.profilePic %>" alt="">
        <div class="flex flex-col">
            <p style="text-shadow: 1px 1px 5px black;"><%= receiverUser.username %></p>
            <span id="calling-status" style="text-shadow: 1px 1px 5px black;" class="text-xs">Calling...</span>
        </div>
    </div>
    <video class="w-full object-cover h-full" autoplay playsinline id="remoteVideo"></video>
    <video class="" autoplay muted playsinline id="localVideo"></video>
    <div class="flex gap-4 absolute bottom-[20px] w-full justify-center z-2">
        <button id="toggleVideo" type="button" class="h-[50px] w-[50px] rounded-full bg-zinc-800/50 hover:bg-zinc-900 transition-all duration-200 flex items-center justify-center text-white">
            <i class="ri-video-on-fill text-xl"></i>
        </button>
        <button id="toggleSpeaker" type="button" class="h-[50px] w-[50px] rounded-full bg-zinc-800/50 hover:bg-zinc-900 transition-all duration-200 flex items-center justify-center text-white">
            <i class="ri-volume-up-fill text-xl"></i>
        </button>
        <button id="toggleMic" type="button" class="h-[50px] w-[50px] rounded-full bg-zinc-800/50 hover:bg-zinc-900 transition-all duration-200 flex items-center justify-center text-white">
            <i class="ri-mic-fill text-xl"></i>
        </button>
        <button id="cancelvidBtn" type="button" class="h-[50px] w-[50px] rounded-full bg-red-600 hover:bg-red-900 transition-all duration-200 flex items-center justify-center text-white">
            <i class="ri-phone-fill text-xl rotate-[135deg]"></i>
        </button>
    </div>
</div>